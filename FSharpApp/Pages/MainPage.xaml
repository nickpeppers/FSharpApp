<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FSharpApp.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Editor Margin="10,5" x:Name="SpeechEditor"/>
        <Label Grid.Row="1" Margin="10,5" x:Name="OutputLabel" />
        <Button Grid.Row="2" Margin="10,5" Text="Run Text" Clicked="OnRunClicked"/>
        <Button Grid.Row="3" Margin="10,5" Text="Speak" Clicked="OnSpeakClicked"/>
        <Button Grid.Row="4" Margin="10,5" Text="Next" Clicked="OnNextClicked"/>
    </Grid>
</ContentPage>